<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorTextOrIcons"
    android:layout_alignParentBottom="true">


    <ImageButton
        android:id="@+id/game_list_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorTextOrIcons"
        android:paddingTop="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/game_list_normal" />

    <ImageButton
        android:id="@+id/top_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorTextOrIcons"
        android:paddingTop="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/top_normal" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorTextOrIcons" />


    <ImageButton
        android:id="@+id/bbs_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorTextOrIcons"
        android:paddingTop="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/bbs_normal" />

    <ImageButton
        android:id="@+id/account_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorTextOrIcons"
        android:paddingTop="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/account_normal" />


</LinearLayout>

