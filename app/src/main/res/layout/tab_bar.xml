<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryLight"
        android:alpha="0.1"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/colorTextOrIcons">

    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:id="@+id/game_list_button"
        android:paddingTop="2dp"
        android:src="@drawable/game_list_normal"
        android:background="@color/colorTextOrIcons" />
    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:id="@+id/web_button"
        android:paddingTop="2dp"
        android:src="@drawable/web_normal"
        android:background="@color/colorTextOrIcons" />
    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:id="@+id/bbs_button"
        android:paddingTop="2dp"
        android:src="@drawable/bbs_normal"
        android:background="@color/colorTextOrIcons" />
    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:id="@+id/account_button"
        android:paddingTop="2dp"
        android:src="@drawable/account_normal"
        android:background="@color/colorTextOrIcons" />

</LinearLayout>
</LinearLayout>
